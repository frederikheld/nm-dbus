{
  "name": "nm-dbus",
  "version": "0.0.1",
  "description": "Provides simplified access to NetworkManager features via DBus",
  "main": "index.js",
  "scripts": {
    "test": "mocha tests/*.test.js",
    "test:dev": "mocha --watch \"tests/*.test.js\"",
    "test:init": "sudo docker build --rm -f Dockerfile.test -t nm-dbus-test-environment .",
    "test:isolated": "sudo docker run --rm --mount type=bind,src=$(pwd),dst=/app --env DBUS_SESSION_BUS_ADDRESS=\"$DBUS_SESSION_BUS_ADDRESS\" nm-dbus-test-environment",
    "coverage": "nyc mocha tests/*.test.js"
  },
  "keywords": [
    "network-manager",
    "dbus",
    "networking",
    "linux"
  ],
  "author": "Frederik S. Held (kontakt@frederikheld.de)",
  "license": "MIT",
  "dependencies": {
    "dbus-next": "^0.9.2"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0"
  }
}
